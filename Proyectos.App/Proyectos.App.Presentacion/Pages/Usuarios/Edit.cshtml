@page
@model Proyectos.App.Presentacion.Pages.Usuarios.EditModel
@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="card">
    <div class="card-header">
        <h2 class="text-info">Actualizar Usuario</h2>
    </div>
    <div class="card-body">
        <form method="post">
            <div asp-validation-sumary="ModelOnly" class="text-danger">
                <!-- se envía campo de la PK oculto -->
                <input type="hidden"  asp-for="usuario.id" />

                <div class="container" style="padding: 50px">
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="usuario.id" class="text-primary"></label>
                            </div>
                            <div class="col-sm-1">
                                <input asp-for="usuario.id" class="form-control" value="@Model.usuario.id" disabled />
                            </div>
                            <span asp-validation-for="usuario.id" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="usuario.identificacion" class="text-primary"></label>
                            </div>
                            <div class="col-sm-3">
                                <input asp-for="usuario.identificacion" class="form-control" value=@Model.usuario.identificacion />
                            </div>
                            <span asp-validation-for="usuario.identificacion" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="usuario.nombre" class="text-primary"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="usuario.nombre" class="form-control" value=@Model.usuario.nombre />
                            </div>
                            <span asp-validation-for="usuario.nombre" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="usuario.mail" class="text-primary"></label>
                            </div>
                            <div class="col-sm-6">
                                <input asp-for="usuario.mail" class="form-control" value=@Model.usuario.mail />
                            </div>
                            <span asp-validation-for="usuario.mail" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="usuario.movil" class="text-primary"></label>
                            </div>
                            <div class="col-sm-3">
                                <input asp-for="usuario.movil" class="form-control" value=@Model.usuario.movil />
                            </div>
                            <span asp-validation-for="usuario.movil" class="text-danger"></span>
                        </div>
                    </div>                    
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2"> 
                                <label asp-for="usuario.vigente"  class=" text-primary"></label>
                            </div>
                            <div class="col-sm-3">                               
                                <input class="form-check-input" type="checkbox" asp-for="usuario.vigente" value=@Model.usuario.vigente />
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-2 offset-sm-2"> 
                                <input type="submit" value="Actualizar" class="btn btn-success form-control" />
                            </div>
                            <div class="col-sm-4">
                                <a asp-page="List" class="btn btn-primary form-control">Volver a la Lista</a>
                            </div>                            
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
